{% extends "base.html.twig"%}

{% block title %}les Gites
{% endblock %}


{% block body %}

	<div class="row m-2">

		<div class="col-md-6">
			<input type="button" id='btn-search' class="btn btn-primary" value='Trouver un gite'>
		</div>

		<div class="col-md-12 d-none" id='form-search'>
			{{ form_start(form) }}
			<div class="row">
				<div class="col-6">
					<div class="row">
						<div class="col-12">{{ form_row(form.city) }}</div>
						<div class="col-4">{{ form_row(form.minSurface) }}</div>
						<div class="col-4">{{ form_row(form.minBedroom) }}</div>

						<div class="col-4">{{ form_row(form.animals) }}</div>


					</div>
				</div>
				<div class="col-6">
					<div class="row">


						<div class="col-6">{{ form_row(form.equipements) }}</div>
						<div class="col-6">{{ form_row(form.services) }}</div>
					</div>
				</div>
			</div>


			<div class="col"><input type="submit" class='btn btn-outline-primary' value='Rechercher'>

			</div>

			{{ form_end(form) }}
		</div>


	</div>
	<div class="row">
		<div class="d-flex justify-content-center">
			{{ knp_pagination_render(gites,"pagination/twitter_bootstrap_v4_pagination.html.twig") }}
		</div>

		{% for gite in gites %}


			<div class="card m-4 border-light " style="width: 18rem;">

				{% if gite.imageFile %}
					<img src=" {{vich_uploader_asset(gite,'imageName' )}} " class='card-img-top mt-2' style="width:260px; height:170px;" alt="">

				{% else %}
					<img src=" /images/img/notfound.jpg " class='card-img-top mt-2' style="width:260px; height:170px;" alt="">

				{% endif %}

				<div class="card-body">
					<h3 class="card-title">
						<strong>{{gite.name}}</strong>
					</h3>

					<p class="card-title">
						<strong>ville :</strong>
						{{gite.city}}</p>
					<p class="card-text">
						<strong>Surface :</strong>
						{{gite.surface}}
						mÂ²</p>
					<p class="card-text">
						<strong>nombre de Chambre :</strong>
						{{gite.bedroom}}</p>

				</div>
				<a class='btn btn-light btn-gite mb-2' href='{{ path("gite_show",{id:gite.id}) }}'>
					<strong>Voir le gite</strong>
				</a>

			</div>

		{% endfor %}

		<div class="d-flex justify-content-center">
			{{ knp_pagination_render(gites,"pagination/twitter_bootstrap_v4_pagination.html.twig") }}
		</div>
	</div>
{%  endblock %}
