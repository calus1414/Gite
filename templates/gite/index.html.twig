{% extends "base.html.twig"%}

{% block title %}les Gites
{% endblock %}


{% block body %}

	<div class="row">
		<div class="col-md-6">
			<h1>les gites disponible</h1>
		</div>

		<div class="col-md-6">
			{{ form_start(form) }}
			<div class="row">
				<div class="col-md-12 ">
					<div class='d-flex'>
						{{ form_row(form.name) }}<button class="btn btn-outline-success me-2" type="submit">Search</button>
					</div>
				</div>

			</div>
			<div class="row">
				<div class="col-md-3">{{ form_row(form.surface) }}</div>
				<div class="col-md-3">{{ form_row(form.bedroom) }}</div>
				<div class="col-md-3">{{ form_row(form.city) }}</div>
				<div class="col-md-3">{{ form_row(form.animals) }}</div>
			</div>
			<div class="row">
				<div class="col-md-4">{{ form_row(form.equipements) }}</div>

			</div>
			{{ form_end(form) }}
		</div>


	</div>
	<div class="row">
		<div class="d-flex justify-content-center">
			{{ knp_pagination_render(gites,"pagination/twitter_bootstrap_v4_pagination.html.twig") }}
		</div>

		{% for gite in gites %}


			<div class="card m-4" style="width: 18rem;">
				<div class="card-body">
					<h3 class="card-title">{{gite.name}}</h3>
					<h5 class="card-title">{{gite.createdAt | format_datetime()}}</h5>
					<p class="card-text">{{gite.description}}</p>
					<p class="card-text">{{gite.postalCode}}</p>

				</div>
				<a class='btn btn-primary' href='{{ path("gite_show",{id:gite.id}) }}'>Voir le gite</a>

			</div>

		{% endfor %}

		<div class="d-flex justify-content-center">
			{{ knp_pagination_render(gites,"pagination/twitter_bootstrap_v4_pagination.html.twig") }}
		</div>
	</div>
{%  endblock %}
