{% block title %}Modifier Gite
{% endblock %}


{% block body %}
	<h1>Modifier un Gite</h1>


	{{ form_start(form) }}
	<div class="row">
		<div class="col-md-6">{{ form_row(form.name) }}</div>
	</div>
	<div class="row">
		<div class="col-md-8">{{ form_row(form.description) }}</div>
	</div>
	<div class="row">
		<div class="col-md-4">{{ form_row(form.surface) }}</div>
		<div class="col-md-4">{{ form_row(form.bedroom) }}</div>

		<div class="col-md-4">
			{{form_row(form.imageName)}}
		</div>

	</div>
	<div class="row">
		<div class="col-md-4">{{ form_row(form.address) }}</div>
		<div class="col-md-4">{{ form_row(form.city) }}</div>
		<div class="col-md-4">{{ form_row(form.postal_code) }}</div>

	</div>
	<div class="row">
		<div class="col-md-4">{{ form_row(form.equipements) }}</div>
		<div class="col-md-4">{{ form_row(form.services) }}</div>
		<div class="col-md-4">{{ form_row(form.animals) }}</div>
	</div>

	<div class="row">
		<div class="col-md-6">{{ form_row(form.lat) }}</div>
		<div class="col-md-6">{{ form_row(form.lng) }}</div>
	</div>
	<input type="submit" class='btn btn-warning m-3' value='Editer'>
	{{ form_end(form) }}


