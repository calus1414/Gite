{% extends "base.html.twig"%}

{% block title %}
	Bienvenue
{% endblock %}

{% block body %}
	<h1>Voici les dernier Gite Poster</h1>
	<div class="row">
		<div class="col-md-4">
			<a href="{{path("gite_index")}}" class='btn btn-outline-primary'>Voir tous les Gites</a>
		</div>
	</div>
	<div class="row">
		{% for gite in gites %}


			<div class="card m-6 m-2" style="width: 22rem;">

				{% if gite.imageFile %}
					<img src=" {{vich_uploader_asset(gite,'imageName' )}} " class='card-img-top mt-2' style="width:325px; height:200px;" alt="">

				{% else %}
					<img src=" /images/img/notfound.jpg " class='card-img-top' style="width:325px mt-2; height:200px;" alt="">

				{% endif %}
				<div class="card-body">
					<h3 class="card-title">
						<strong>{{gite.name}}</strong>
					</h3>
					<h5 class="card-title">{{gite.createdAt | format_datetime()}}</h5>

					<p class="card-text">{{gite.postalCode}}</p>

				</div>
				<a class='btn btn-primary' href='{{ path("gite_show",{id:gite.id}) }}'>Voir le gite</a>

			</div>

		{% endfor %}
	</div>
	<div class="row">
		<div class="col-md-4">
			<a href="{{path("gite_index")}}" class='btn btn-outline-primary'>Voir tous les Gites</a>
		</div>
	</div>
{% endblock %}
